@model DB2_Project.Models.Finca

@{
	ViewBag.Title = "Registrar Finca";
}

<h1>Registrar Finca</h1>
<hr />

<div class="row">
	<div class="col-md-4">
		@Html.ValidationSummary( true, "", new { @class = "text-danger" } )
		<form asp-action="Registrar" method="post">
			<div class="form-group">
				<label>Productor</label>
				<select asp-for="ProductorID" class="form-control" asp-items="ViewBag.Productores">
					<option selected disabled>Seleccione un productor</option>
				</select>
				<span asp-validation-for="ProductorID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Nombre"></label>
				<input asp-for="Nombre" class="form-control" />
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Direccion"></label>
				<input asp-for="Direccion" class="form-control" />
				<span asp-validation-for="Direccion" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ExtensionTotal"></label>
				<input asp-for="ExtensionTotal" class="form-control" type="number" step="0.01" />
				<span asp-validation-for="ExtensionTotal" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Registrar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
