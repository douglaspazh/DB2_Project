@model DB2_Project.Models.Finca

@{
	ViewBag.Title = "Eliminar Finca";
}

<h1>Eliminar Finca</h1>
<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="Eliminar" method="post">
			<input type="hidden" asp-for="FincaID" />
			<div class="form-group">
				<label>¿Está seguro de que desea eliminar la finca <strong>@Model.Nombre</strong>?</label>
			</div>
			<div class="form-group">
				<input type="submit" value="Eliminar" class="btn btn-danger" />
				<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
